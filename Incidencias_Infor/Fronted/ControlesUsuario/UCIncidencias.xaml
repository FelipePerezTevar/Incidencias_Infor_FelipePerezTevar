<UserControl x:Class="Incidencias_Infor.Fronted.ControlesUsuario.UCIncidencias"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incidencias_Infor.Fronted.ControlesUsuario"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <TextBlock Text="Futuros filtros"/>
        </Grid>
        <Grid>
            <DataGrid x:Name="dgIncidencia"  AutoGenerateColumns="False" CanUserAddRows="False"
                  ColumnWidth="*" IsReadOnly="True" ItemsSource="{Binding listIncidencia}"
                      SelectedItem="{Binding inciNueva}" >
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Editar" x:Name="menuEditar" Click="menuEditar_Click"/>
                        <MenuItem Header="Borrar" x:Name="menuBorrar" Click="menuBorrar_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Articulo" Binding="{Binding articulo1.nombre}"/>
                    <DataGridTextColumn Header="Descripcion" Binding="{Binding descripcion}"/>
                    <DataGridTextColumn Header="Estado" Binding="{Binding estado1.nombre}"/>
                    <DataGridTextColumn Header="Lugar" Binding="{Binding lugar1.nombre}"/>
                    <DataGridTextColumn Header="Responsable" Binding="{Binding profesor2.nombre}"/>
                    <DataGridTextColumn Header="Comunicado" Binding="{Binding comunicado}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
